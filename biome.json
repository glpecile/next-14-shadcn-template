{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"organizeImports": {
		"enabled": true,
		"ignore": ["node_modules", "dist", "out", ".next", "public"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 80,
		"lineEnding": "lf",
		"ignore": ["node_modules", "dist", "out", ".next", "public"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			},
			"nursery": { "useSortedClasses": "warn" }
		},
		"ignore": ["node_modules", "dist", "out", ".next", "public"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"semicolons": "always"
		}
	},
	"files": {
		"ignore": [
			"**/node_modules",
			"**/dist",
			"CHANGELOG.md",
			"pnpm-lock.yaml",
			".next",
			"out"
		]
	}
}
